<h1 align="center">
  <%= "Category: " + @category.name %>
</h1>
<div align="center">
  <% if logged_in? and current_user.admin? %>
      <span class="badge" align="center"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
  <% end %>
  <%= will_paginate @category_articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>

<%= render 'articles/article', obj: @category_articles %>

<div align="center">
  <%= will_paginate @category_articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
</div>
